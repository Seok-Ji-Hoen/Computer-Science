class Solution:
    def sortArrayByParityII(self, nums: List[int]) -> List[int]:
        
        even, odd = [], []
        
        for i in nums:
            if i%2==0:
                even.append(i)
            
            else:
                odd.append(i)
        
        output = []
        
        l = len(nums)
        i = 0
        
        while len(output)<l:
            output.append(even[i])
            output.append(odd[i])
            i+=1
        
        return output
