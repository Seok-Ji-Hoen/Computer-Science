# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def findTarget(self, root: TreeNode, k: int) -> bool:
        
        output = []
        
        def helper(root):
            if root==None:
                pass
            else:
                output.append(root.val)
                helper(root.left)
                helper(root.right)
        
        helper(root)
        
        h = {}
        
        for i in output:
            num = k - i
            if num in h:
                return True
            else:
                h[i] = num
        
        return False
