class Solution:
    def convertToBase7(self, num: int) -> str:
        if num==0:
            return '0'
        output = ''
        plus = True
        if num<0:
            num = -1*num
            plus = False
        
        while num:
            output= str(num%7) + output
            
            num = num//7
        
        return output if plus else '-'+output
