class Solution:
    def thousandSeparator(self, n: int) -> str:
        
        n = str(n)
        output = ''
        temp = ''
        for i in range(len(n)-1,-1,-1):
            if len(temp)%3==0 and len(temp)!=0:
                output = '.' + output
            
            output = n[i] + output
            temp = temp + n[i]
        
        return output
