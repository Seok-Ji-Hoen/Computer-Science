# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def goodNodes(self, root: TreeNode) -> int:
        cnt = 0
        def helper(root:TreeNode, mx:int):
            
            if root==None:
                return
            
            else:
                
                if root.val>=mx:
                    nonlocal cnt
                    cnt+=1
                    mx = root.val
                
                helper(root.left, mx)
                helper(root.right, mx)
            
        helper(root, root.val)
        return cnt
