class Solution:
    def divide(self, dividend: int, divisor: int) -> int:
        
        mx = 2**31-1
        mn = -2**31
        
        if dividend == mn and divisor == -1:
            return mx
        
        if dividend == mx and divisor == 1:
            return mx
        
        negatives = 2
        
        if dividend > 0 :
            dividend = - dividend
            negatives -= 1
        
        if divisor > 0 :
            divisor = - divisor
            negatives -= 1
            
        share = 0
        while dividend - divisor <= 0:
            share -=1
            dividend -= divisor
        
        return -share if negatives!= 1  else share
  
  
  class Solution:
    def divide(self, dividend: int, divisor: int) -> int:
        
        mx = 2**31-1
        mn = -2**31
        
        if dividend == mn and divisor == -1:
            return mx
        
        negative = 2
        
        if dividend<0:
            dividend = -dividend
            negative -=1
        
        if divisor<0 :
            divisor = -divisor
            negative -=1
        
        
        double = [divisor]
        cnt = [1]
        while double[-1]<dividend:
            double.append(double[-1]+double[-1]) 
            cnt.append(cnt[-1]+cnt[-1])
        
        share = 0
        i, j = -1, -1
        
        while dividend>=divisor:
            
            if double[i]<=dividend:
                dividend -= double[i]
                share += cnt[j]
            
            if dividend<double[i]:
                i-=1
                j-=1
        
        return share if negative!=1 else -share
